# Template file for AWS S3 configuration
# Copy this to your service's .env file and fill in your actual values

# AWS S3 Configuration for file upload
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_S3_BUCKET=your-s3-bucket-name-here
AWS_S3_FOLDER=uploads

# Optional: Custom S3 endpoint (for S3-compatible services)
S3_ENDPOINT=

# Optional: CloudFront URL for serving images
CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# Security: Maximum file size (in bytes)
MAX_FILE_SIZE=10485760  # 10MB

# Allowed file extensions
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
